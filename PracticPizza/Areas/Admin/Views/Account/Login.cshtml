@model LoginVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Default form</h4>
            <p class="card-description">
                Basic form layout
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label asp-for="UsernameOrEmail" for="exampleInputUsername1">UsernameOrEmail</label>
                    <input asp-for="UsernameOrEmail" class="form-control" id="exampleInputUsername1" placeholder="UsernameOrEmail">
                </div>
               
                <div class="form-group">
                    <label asp-for="Password" for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                
                <div class="form-check form-check-flat form-check-primary">
                    <label asp-for="IsRememberedMe" class="form-check-label">
                        <input asp-for=IsRememberedMe class="form-check-input">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary me-2">Login</button>
            </form> 
        </div>
    </div>
</div>
